@model WebProject.Areas.TSO.Models.TZExpensesAddValues_ViewModel
@{
	Layout = null; string disable = "";
}
@if (Model.tz_id == 0)
{
	disable = "disabled";
}
<form asp-controller="CostsAndPrices" asp-action="TZExpensesAddValues_Save" asp-antiforgery="true" asp-area="TSO"
	  data-ajax-failure="onFailedFormTZ" data-ajax-success="onSuccessFormTZ" data-ajax-begin="onBeginFormTZ" data-ajax="true" data-ajax-method="POST">
	<input type="hidden" name="tz_id" value="@Model.tz_id" />
	<input type="hidden" name="data_status" value="@Model.data_status" />
	<table class="table-inp-stretch" style="width:100%;">
		<thead>
			<tr>
				<th></th>
				<th>I полугодие</th>
				<th>II полугодие</th>
				<th>Год</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>1. Фактический объём дотаций из всех уровней бюджета, <span class="data-unit">тыс. руб.</span></td>
				<td><input type="text" asp-for="@Model.actual_grants_budget_fact_1" class="data-value double" data-double="exp_add_values"></td>
				<td><input type="text" asp-for="@Model.actual_grants_budget_fact_2" class="data-value double" data-double="exp_add_values"></td>
				<td><input type="text" asp-for="@Model.actual_grants_budget_fact_3" class="data-value" disabled></td>
			</tr>
			<tr>
				<td>2. Фактические доходы, полученные сверх реализации по утверждённым тарифам, <span class="data-unit">тыс. руб.</span></td>
				<td><input type="text" asp-for="@Model.actual_over_profit_fact_1" class="data-value double" data-double="exp_add_values"></td>
				<td><input type="text" asp-for="@Model.actual_over_profit_fact_2" class="data-value double" data-double="exp_add_values"></td>
				<td><input type="text" asp-for="@Model.actual_over_profit_fact_3" class="data-value" disabled></td>
			</tr>
		</tbody>
	</table>
	<button type="submit" class="bttn bttn-color ms-auto" @disable>Сохранить</button>
</form>