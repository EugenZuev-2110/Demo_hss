		<div class="border-block">
			<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panel12" aria-expanded="false">Прочие операционные расходы</button>
			<div id="panel12" class="accordion-collapse collapse">
				<div class="accordion-body">
					<div class="data-block">
						@await Component.InvokeAsync("TZ_OtherOperatingsCostsData_Partial", new { tz_id = Model.tz_id, data_status = Model.data_status, perspective_year = Model.perspective_year })
						@*<div class="scroll-table-wrapper">
							не понятно, зачем тут этот div
						</div>*@
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript" src="@Url.Content("~/hss/js/popup_common_scripts.js")"></script>