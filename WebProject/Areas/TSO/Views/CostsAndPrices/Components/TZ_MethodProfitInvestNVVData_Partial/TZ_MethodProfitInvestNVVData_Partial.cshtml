@model WebProject.Areas.TSO.Models.TZMethodProfitInvestViewModel
@{
	Layout = null; string disable = "";
}
@if (Model.tz_id == 0)
{
	disable = "disabled";
}
<form asp-controller="CostsAndPrices" asp-action="TZMethodProfitInvestNVV_Save" asp-antiforgery="true" asp-area="TSO"
	  data-ajax-failure="onFailedFormTZ" data-ajax-success="onSuccessFormTZ" data-ajax-begin="onBeginFormTZ" data-ajax="true" data-ajax-method="POST">
	<input type="hidden" name="tz_id" value="@Model.tz_id" />
	<input type="hidden" name="data_status" value="@Model.data_status" />
	<input type="hidden" name="perspective_year" value="@Model.perspective_year" />
	<table class="table-inp-stretch" style="width:100%;">
		<thead>
			<tr>
				<th rowspan="2"></th>
				<th colspan="3">План</th>
			</tr>
			<tr>
				<th>I полугодие</th>
				<th>II полугодие</th>
				<th>Год</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>Суммарная корректировка НВВ (метод Б), <span class="data-unit">тыс. руб.</span></td>
				<td><input type="text" asp-for="@Model.total_correction_nvv_mB_plan_1" class="data-value" disabled></td>
				<td><input type="text" asp-for="@Model.total_correction_nvv_mB_plan_2" class="data-value" disabled></td>
				<td><input type="text" asp-for="@Model.total_correction_nvv_mB_plan_3" class="data-value" disabled></td>
			</tr>
			<tr>
				<td>1. Возврат капитала, <span class="data-unit">тыс. руб.</span></td>
				<td><input type="text" asp-for="@Model.return_capital_plan_1" class="data-value" disabled></td>
				<td><input type="text" asp-for="@Model.return_capital_plan_2" class="data-value" disabled></td>
				<td><input type="text" asp-for="@Model.return_capital_plan_3" class="data-value" disabled></td>
			</tr>
			<tr>
				<td>Полная величина инвестированного капитала, <span class="data-unit">тыс. руб.</span></td>
				<td><input type="text" asp-for="@Model.full_value_invest_plan_1" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.full_value_invest_plan_2" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.full_value_invest_plan_3" class="data-value" disabled></td>
			</tr>
			<tr>
				<td>Срок возврата инвестированного капитала, <span class="data-unit">лет</span></td>
				<td><input type="text" asp-for="@Model.return_period_invest_plan_1" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.return_period_invest_plan_2" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.return_period_invest_plan_3" class="data-value" disabled></td>
			</tr>
			<tr>
				<td>2. Доход на инвестированный капитал, <span class="data-unit">тыс. руб.</span></td>
				<td><input type="text" asp-for="@Model.profit_on_invest_capital_plan_1" class="data-value" disabled></td>
				<td><input type="text" asp-for="@Model.profit_on_invest_capital_plan_2" class="data-value" disabled></td>
				<td><input type="text" asp-for="@Model.profit_on_invest_capital_plan_3" class="data-value" disabled></td>
			</tr>
			<tr>
				<td>Первоначальный размер инвестированного капитала, <span class="data-unit">тыс. руб.</span></td>
				<td><input type="text" asp-for="@Model.initial_amount_invest_plan_1" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.initial_amount_invest_plan_2" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.initial_amount_invest_plan_3" class="data-value" disabled></td>
			</tr>
			<tr>
				<td>Доходность первоначального размера инвестированного капитала, <span class="data-unit">%</span></td>
				<td><input type="text" asp-for="@Model.profit_initial_amount_invest_plan_1" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.profit_initial_amount_invest_plan_2" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.profit_initial_amount_invest_plan_3" class="data-value" disabled></td>
			</tr>
			<tr>
				<td>База инвестированного капитала, <span class="data-unit">тыс. руб.</span></td>
				<td><input type="text" asp-for="@Model.base_invest_plan_1" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.base_invest_plan_2" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.base_invest_plan_3" class="data-value" disabled></td>
			</tr>
			<tr>
				<td>Чистый оборотный капитал, <span class="data-unit">тыс. руб.</span></td>
				<td><input type="text" asp-for="@Model.pure_working_capital_plan_1" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.pure_working_capital_plan_2" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.pure_working_capital_plan_3" class="data-value" disabled></td>
			</tr>
			<tr>
				<td>Норматив чистого оборотного капитала, <span class="data-unit">%</span></td>
				<td><input type="text" asp-for="@Model.norm_pure_working_capital_plan_1" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.norm_pure_working_capital_plan_2" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.norm_pure_working_capital_plan_3" class="data-value" disabled></td>
			</tr>
			<tr>
				<td>Норма доходности, <span class="data-unit">%</span></td>
				<td><input type="text" asp-for="@Model.norm_profit_plan_1" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.norm_profit_plan_2" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.norm_profit_plan_3" class="data-value" disabled></td>
			</tr>
			<tr>
				<td>Норма доходности нового капитала, <span class="data-unit">%</span></td>
				<td><input type="text" asp-for="@Model.norm_profit_new_capital_plan_1" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.norm_profit_new_capital_plan_2" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.norm_profit_new_capital_plan_3" class="data-value" disabled></td>
			</tr>
			<tr>
				<td>Норма доходности старого капитала, <span class="data-unit">%</span></td>
				<td><input type="text" asp-for="@Model.norm_profit_old_capital_plan_1" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.norm_profit_old_capital_plan_2" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.norm_profit_old_capital_plan_3" class="data-value" disabled></td>
			</tr>
			<tr>
				<td>3. Амортизация, <span class="data-unit">тыс. руб.</span></td>
				<td><input type="text" asp-for="@Model.amortization_plan_1" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.amortization_plan_2" class="data-value double" data-double="method_profit_invest"></td>
				<td><input type="text" asp-for="@Model.amortization_plan_3" class="data-value" disabled></td>
			</tr>
		</tbody>
	</table>
	<button type="submit" class="bttn bttn-color ms-auto" @disable>Сохранить</button>
</form>