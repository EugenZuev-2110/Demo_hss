@model WebProject.Areas.TSO.Models.TZIndexesNVVViewModel
@{
	Layout = null; string disable = "";
}
@if (Model.tz_id == 0)
{
	disable = "disabled";
}
<form asp-controller="CostsAndPrices" asp-action="TZIndexesNVV_Save" asp-antiforgery="true" asp-area="TSO"
	  data-ajax-failure="onFailedFormTZ" data-ajax-success="onSuccessFormTZ" data-ajax-begin="onBeginFormTZ" data-ajax="true" data-ajax-method="POST">
	<input type="hidden" name="tz_id" value="@Model.tz_id" />
	<input type="hidden" name="data_status" value="@Model.data_status" />
	<input type="hidden" name="perspective_year" value="@Model.perspective_year" />
	<table class="table-inp-stretch" style="width:100%;">
		<thead>
			<tr>
				<th></th>
				<th>I полугодие</th>
				<th>II полугодие</th>
				<th>Год</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>Индекс эффективности расходов, <span class="data-unit">%</span></td>
				<td><input type="text" asp-for="@Model.index_effective_cost_plan_1" class="data-value double" data-double="indexes_nvv"></td>
				<td><input type="text" asp-for="@Model.index_effective_cost_plan_2" class="data-value double" data-double="indexes_nvv"></td>
				<td><input type="text" asp-for="@Model.index_effective_cost_plan_3" class="data-value double" data-double="indexes_nvv"></td>
			</tr>
			<tr>
				<td>Индекс потребительских цен, <span class="data-unit">%</span></td>
				<td><input type="text" asp-for="@Model.index_consumers_price_plan_1" class="data-value double" data-double="indexes_nvv"></td>
				<td><input type="text" asp-for="@Model.index_consumers_price_plan_2" class="data-value double" data-double="indexes_nvv"></td>
				<td><input type="text" asp-for="@Model.index_consumers_price_plan_3" class="data-value double" data-double="indexes_nvv"></td>
			</tr>
			<tr>
				<td>Индекс количества активов, <span class="data-unit">%</span></td>
				<td><input type="text" asp-for="@Model.index_count_actives_plan_1" class="data-value double" data-double="indexes_nvv"></td>
				<td><input type="text" asp-for="@Model.index_count_actives_plan_2" class="data-value double" data-double="indexes_nvv"></td>
				<td><input type="text" asp-for="@Model.index_count_actives_plan_3" class="data-value double" data-double="indexes_nvv"></td>
			</tr>
		</tbody>
	</table>
	<button type="submit" class="bttn bttn-color ms-auto" @disable>Сохранить</button>
</form>