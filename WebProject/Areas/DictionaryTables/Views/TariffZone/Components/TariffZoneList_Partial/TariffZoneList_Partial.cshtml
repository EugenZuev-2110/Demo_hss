@model List<WebProject.Areas.DictionaryTables.Models.TariffZoneListViewModel>
@{
	Layout = null;
	int cnt_columns = 14;
}
<div class="table-block">
			<div class="table-buttons TarifZoneTable-buttons"></div>
	<table id="TarifZoneTable" class="display compact table-clicked" style="width:100%">
				<thead>
					<tr>
						<th rowspan="2">Уном ТЗ</th>
						<th rowspan="2">Наименование ТСО</th>
						<th rowspan="2">Наименование Тарифной зоны</th>
						<th colspan="2">№ Тарифной зоны в исходном файле</th>
						<th rowspan="2">Комбинированное производство, более 25 МВт</th>
						<th rowspan="2">Комбинированное производство, менее 25 МВт</th>
						<th rowspan="2">Некомбинированное производство</th>
						<th rowspan="2">Передача</th>
						<th rowspan="2">Сбыт</th>
						<th rowspan="2">Договор поставки</th>
						<th rowspan="2">Уникальный номер слоя в электронной модели</th>
						<th rowspan="2">SYS объекта в электронном слое</th>
						<th rowspan="2">Территория</th>

					</tr>
					<tr>
						<th>Факт</th>
						<th>План</th>
					</tr>
					<tr class="filter-row ">
						@for (int i = 0; i < @cnt_columns; i++)
						{
							if (i == 0)
							{
								<th class="dtfc-fixed-left" style="left:0; position:sticky;"><input type="text" class="filter-col-0" /></th>
							}
							else
							{
								<th><input type="text" class="filter-col-@i" /></th>
							}
						}
					</tr>
				</thead>
		<tbody title="Двойной клик открывает форму редактирования">
			@foreach (var tz_list in Model)
			{
				<tr ondblclick="OpenPopupTariffZone(@tz_list.tz_id);">
					<td>@tz_list.unom_tz</td>
					<td>@tz_list.tso_name</td>
					<td>@tz_list.tz_name</td>
					<td>@tz_list.tz_num</td>
					<td>@tz_list.tz_num_plan</td>
					<td>@tz_list.combine_prod_more25</td>
					<td>@tz_list.combine_prod_less25</td>
					<td>@tz_list.not_combine_prod</td>
					<td>@tz_list.transfer</td>
					<td>@tz_list.sale</td>
					<td>@tz_list.delivery_contract</td>
					<td>@tz_list.layer_id</td>
					<td>@tz_list.layer_sys</td>
					<td>@tz_list.territory</td>
					</tr>
			}		
		</tbody>
	</table>
</div>
		<div class="data-row table-summary">
			<div class="data-item rows-count">
				<h5>Всего записей:</h5>
				<p><span class="mark-color" id="all_cnt_rows"></span></p>
			</div>
		</div>

