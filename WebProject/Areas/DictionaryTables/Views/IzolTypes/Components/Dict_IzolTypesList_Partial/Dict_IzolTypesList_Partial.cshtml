@model List<DataBase.Models.DictionaryTables.DataBaseDictionaryTablesModel.Dict_IzolTypes>
@{
	int cnt_columns = 4;
}


<div class="table-block">
	<input type="hidden" value="0" id="refresh_izolTypes_table" />
	<div class="table-buttons Dict_IzolTypesTable-buttons"></div>
	<table id="Dict_IzolTypesTable" class="display compact table-clicked" style="width:100%">
		<thead>
			<tr>
				<th>УНОМ тепловой изоляции</th>
				<th>Наименование типа изоляции</th>
				<th>Коэффициент теплопроводности (λ), Вт / (м · °С)</th>
				<th>Коэффициент теплопередачи (К)</th>
			</tr>
			<tr class="filter-row ">
				@for (int i = 0; i < @cnt_columns; i++)
				{
					if (i == 0)
					{
						<th class="dtfc-fixed-left" style="left:0; position:sticky;"><input type="text" class="filter-col-0" /></th>
					}
					else
					{
						<th><input type="text" class="filter-col-@i" /></th>
					}
				}
			</tr>
		</thead>
		<tbody>
			@foreach(var izol in Model)
			{
				<tr onclick="OpenIzolTypes(@izol.Id);">
					<td>@izol.Id</td>
					<td>@izol.izol_type_name</td>
					<td>@izol.ht_conduct_coef</td>
					<td>@izol.ht_trasfer_coef</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<div class="data-row table-summary">
	<div class="data-item rows-count">
		<h5>Всего записей:</h5>
		<p><span class="mark-color" id="all_cnt_rows"></span></p>
	</div>
</div>
