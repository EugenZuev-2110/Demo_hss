@model List<WebProject.Areas.DictionaryTables.Models.GasTurbineViewmodel>
@{
	int cnt_columns = 6;
}

<h3>Газовые турбоагрегаты</h3>
<div class="table-block">
	<input type="hidden" value="0" id="refresh_GasTurbine_table" />
	<div class="table-buttons GasTurbineTable-buttons"></div>
	<table id="GasTurbineTable" class="display compact table-clicked" style="width:100%">
		<thead>
			<tr>
				<th>УНОМ газового турбоагрегата</th>
				<th>Марка оборудования</th>
				<th>Завод изготовитель</th>
				<th>Установленная электрическая мощность<span class="data-unit">(МВт)</span></th>
				<th>Парковый ресурс<span class="data-unit">(тыс.ч)</span></th>
				<th>Нормативное количество пусков<span class="data-unit">(шт)</span></th>
			</tr>
			<tr class="filter-row ">
				@for (int i = 0; i < @cnt_columns; i++)
				{
					if (i == 0)
					{
						<th class="dtfc-fixed-left" style="left:0; position:sticky;"><input type="text" class="filter-col-0" /></th>
					}
					else
					{
						<th><input type="text" class="filter-col-@i" /></th>
					}
				}
			</tr>
		</thead>
		<tbody>
			@foreach(var turbine in Model)
			{
				<tr onclick="OpenPopup(@turbine.equip_id, 'OpenPopupGasTurbine', 'GasTurbineDataPopup')">
					<td>@turbine.unom_equip</td>
					<td>@turbine.mark</td>
					<td>@turbine.manufacturer</td>
					<td>@turbine.inst_electric_power</td>
					<td>@turbine.park_resources</td>
					<td>@turbine.norm_count_start</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<div class="data-row table-summary">
	<div class="data-item rows-count">
		<h5>Всего записей:</h5>
		<p><span class="mark-color" id="all_cnt_rows"></span></p>
	</div>
</div>
<script type="text/javascript" src="@Url.Content("~/hss/js/datatables_common_scripts.js")"></script>		