@model List<WebProject.Areas.DictionaryTables.Models.HWBoilersViewmodel>
@{
	int cnt_columns = 10;
}

<h3>Водогрейные котлоагрегаты</h3>
<div class="table-block">
	<input type="hidden" value="0" id="refresh_HWBoilers_table" />
	<div class="table-buttons HWBoilersTable-buttons"></div>
	<table id="HWBoilersTable" class="display compact table-clicked" style="width:100%">
		<thead>
			<tr>
				<th rowspan="2">УНОМ водогрейного котлоагрегата</th>
				<th rowspan="2">Марка оборудования</th>
				<th rowspan="2">Завод изготовитель</th>
				<th rowspan="2">Установленная тепловая мощность<span class="data-unit">(Гкал/ч)</span></th>
				<th rowspan="2">Максимальная температура на выходе<span class="data-unit">(°С)</span></th>
				<th rowspan="2">Нормативный срок службы<span class="data-unit">(лет)</span></th>
				<th colspan="3">Расход сетевой воды</th>
                <th rowspan="2">КПД</th>
			</tr>
			<tr>
				<th>Минимальный<span class="data-unit">(т/ч)</span></th>
				<th>Номинальный<span class="data-unit">(т/ч)</span></th>
				<th>Максимальный<span class="data-unit">(т/ч)</span></th>
			</tr>
			<tr class="filter-row ">
				@for (int i = 0; i < @cnt_columns; i++)
				{
					if (i == 0)
					{
						<th class="dtfc-fixed-left" style="left:0; position:sticky;"><input type="text" class="filter-col-0" /></th>
					}
					else
					{
						<th><input type="text" class="filter-col-@i" /></th>
					}
				}
			</tr>
		</thead>
		<tbody>
			@foreach (var HWBoilers in Model)
			{
				<tr onclick="OpenPopup(@HWBoilers.equip_id, 'OpenPopupHWBoiler', 'HWBoilerDataPopup')">
                    <td>@HWBoilers.unom_equip</td>
                    <td>@HWBoilers.mark</td>
                    <td>@HWBoilers.manufacturer</td>
                    <td>@HWBoilers.inst_heat_power</td>
                    <td>@HWBoilers.max_temp_out</td>
                    <td>@HWBoilers.norm_service_life</td>
                    <td>@HWBoilers.net_water_consump_min</td>
                    <td>@HWBoilers.net_water_consump_nom</td>
                    <td>@HWBoilers.net_water_consump_max</td>
                    <td>@HWBoilers.kpd</td>
                </tr>
			}
		</tbody>
	</table>
</div>
<div class="data-row table-summary">
	<div class="data-item rows-count">
		<h5>Всего записей:</h5>
		<p><span class="mark-color" id="all_cnt_rows"></span></p>
	</div>
</div>
<script type="text/javascript" src="@Url.Content("~/hss/js/datatables_common_scripts.js")"></script>		