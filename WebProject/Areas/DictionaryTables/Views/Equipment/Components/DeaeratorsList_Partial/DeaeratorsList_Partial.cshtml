@model List<WebProject.Areas.DictionaryTables.Models.ReverseOsmosisInstalVPUViewmodel>
@{
	int cnt_columns = 3;
}

<h3>Деаэраторы</h3>
<div class="table-block">
	<input type="hidden" value="0" id="refresh_Deaerators_table" />
	<div class="table-buttons DeaeratorsTable-buttons"></div>
	<table id="DeaeratorsTable" class="display compact table-clicked" style="width:100%">
		<thead>
			<tr>
				<th>УНОМ деаэратора</th>
				<th>Марка оборудования</th>
				<th>Производительность<span class="data-unit">м<sup>3</sup>/ч</span></th></th>
			</tr>
			<tr class="filter-row ">
				@for (int i = 0; i < @cnt_columns; i++)
				{
					if (i == 0)
					{
						<th class="dtfc-fixed-left" style="left:0; position:sticky;"><input type="text" class="filter-col-0" /></th>
					}
					else
					{
						<th><input type="text" class="filter-col-@i" /></th>
					}
				}
			</tr>
		</thead>
		<tbody>
			@foreach (var deaerators in Model)
			{
				<tr onclick="OpenPopup(@deaerators.equip_id, 'OpenPopupDeaerators', 'DeaeratorsDataPopup')">
					<td>@deaerators.unom_equip</td>
					<td>@deaerators.mark</td>
					<td>@deaerators.capacity</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<div class="data-row table-summary">
	<div class="data-item rows-count">
		<h5>Всего записей:</h5>
		<p><span class="mark-color" id="all_cnt_rows"></span></p>
	</div>
</div>
<script type="text/javascript" src="@Url.Content("~/hss/js/datatables_common_scripts.js")"></script>		