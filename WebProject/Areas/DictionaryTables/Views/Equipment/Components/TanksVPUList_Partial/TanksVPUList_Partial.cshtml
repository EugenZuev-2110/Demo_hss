@model List<WebProject.Areas.DictionaryTables.Models.TanksVPUViewmodel>
@{
	int cnt_columns = 3;
}

<h3>Баки ВПУ</h3>
<div class="table-block">
	<input type="hidden" value="0" id="refresh_TanksVPU_table" />
	<div class="table-buttons TanksVPUTable-buttons"></div>
	<table id="TanksVPUTable" class="display compact table-clicked" style="width:100%">
		<thead>
			<tr>
				<th>УНОМ бака ВПУ</th>
				<th>Марка оборудования</th>
				<th>Объём<span class="data-unit">м<sup>3</sup></span></th>
			</tr>
			<tr class="filter-row ">
				@for (int i = 0; i < @cnt_columns; i++)
				{
					if (i == 0)
					{
						<th class="dtfc-fixed-left" style="left:0; position:sticky;"><input type="text" class="filter-col-0" /></th>
					}
					else
					{
						<th><input type="text" class="filter-col-@i" /></th>
					}
				}
			</tr>
		</thead>
		<tbody>
			@foreach(var tank in Model)
			{
				<tr onclick="OpenPopup(@tank.equip_id, 'OpenPopupTanksVPU', 'TanksVPUDataPopup')">
				<td>@tank.unom_equip</td>
				<td>@tank.mark</td>
				<td>@tank.volume</td>
			</tr>
			}
		</tbody>
	</table>
</div>
<div class="data-row table-summary">
	<div class="data-item rows-count">
		<h5>Всего записей:</h5>
		<p><span class="mark-color" id="all_cnt_rows"></span></p>
	</div>
</div>
<script type="text/javascript" src="@Url.Content("~/hss/js/datatables_common_scripts.js")"></script>		