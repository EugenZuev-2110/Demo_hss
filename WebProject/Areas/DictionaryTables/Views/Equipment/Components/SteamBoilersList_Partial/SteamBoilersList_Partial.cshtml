@model List<WebProject.Areas.DictionaryTables.Models.SteamBoilersViewmodel>
@{
	int cnt_columns = 9;
}
<h3>Паровые котлоагрегаты</h3>
<div class="table-block">
	<input type="hidden" value="0" id="refresh_SteamBoilers_table" />
	<div class="table-buttons SteamBoilersTable-buttons"></div>
	<table id="SteamBoilersTable" class="display compact table-clicked" style="width:100%">
		<thead>
			<tr>
				<th>УНОМ парового котлоагрегата</th>
				<th>Марка оборудования</th>
				<th>Завод изготовитель</th>
				<th>Паропроизводительность<span class="data-unit">(т/ч)</span></th>
				<th>Теплопроизводительность<span class="data-unit">(Гкал/ч)</span></th>
				<th>Нормативный срок службы<span class="data-unit">(лет)</span></th>
				<th>КПД<span class="data-unit">(%)</span></th>
				<th>Давление свежего пара<span class="data-unit">(ата)</span></th>
				<th>Температура свежего пара<span class="data-unit">(°С)</span></th>
			</tr>
			<tr class="filter-row ">
				@for (int i = 0; i < @cnt_columns; i++)
				{
					if (i == 0)
					{
						<th class="dtfc-fixed-left" style="left:0; position:sticky;"><input type="text" class="filter-col-0" /></th>
					}
					else
					{
						<th><input type="text" class="filter-col-@i" /></th>
					}
				}
			</tr>
		</thead>
		<tbody>
			@foreach (var SteamBoilers in Model)
			{
				<tr onclick="OpenPopup(@SteamBoilers.equip_id, 'OpenPopupSteamBoiler', 'SteamBoilerDataPopup')">
				<td>@SteamBoilers.unom_equip</td>
				<td>@SteamBoilers.mark</td>
				<td>@SteamBoilers.manufacturer</td>
				<td>@SteamBoilers.capacity</td>
				<td>@SteamBoilers.inst_heat_power</td>
				<td>@SteamBoilers.norm_service_life</td>
				<td>@SteamBoilers.kpd</td>
				<td>@SteamBoilers.fresh_steam_pressure</td>
				<td>@SteamBoilers.fresh_steam_temp</td>
			</tr>
			}
		</tbody>
	</table>
</div>
<div class="data-row table-summary">
	<div class="data-item rows-count">
		<h5>Всего записей:</h5>
		<p><span class="mark-color" id="all_cnt_rows"></span></p>
	</div>
</div>
<script type="text/javascript" src="@Url.Content("~/hss/js/datatables_common_scripts.js")"></script>		