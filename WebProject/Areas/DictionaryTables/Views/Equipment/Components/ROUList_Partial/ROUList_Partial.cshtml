@model List<WebProject.Areas.DictionaryTables.Models.ROUViewmodel>
@{
	int cnt_columns = 5;
}

<h3>РОУ</h3>
<div class="table-block">
	<input type="hidden" value="0" id="refresh_ROU_table" />
	<div class="table-buttons ROUTable-buttons"></div>
	<table id="ROUTable" class="display compact table-clicked" style="width:100%">
		<thead>
			<tr>
				<th>УНОМ РОУ</th>
				<th>Марка оборудования</th>
				<th>Паропроизводительность<span class="data-unit">(т/ч)</span></th>
				<th>Давление свежего пара<span class="data-unit">(ата)</span></th>
				<th>Температура свежего пара<span class="data-unit">(°С)</span></th>
			</tr>
			<tr class="filter-row ">
				@for (int i = 0; i < @cnt_columns; i++)
				{
					if (i == 0)
					{
						<th class="dtfc-fixed-left" style="left:0; position:sticky;"><input type="text" class="filter-col-0" /></th>
					}
					else
					{
						<th><input type="text" class="filter-col-@i" /></th>
					}
				}
			</tr>
		</thead>
		<tbody>
			@foreach (var rou in Model)
			{
				<tr onclick="OpenPopup(@rou.equip_id, 'OpenPopupROU', 'ROUDataPopup')">
					<td>@rou.unom_equip</td>
					<td>@rou.mark</td>
					<td>@rou.capacity</td>
					<td>@rou.fresh_steam_pressure</td>
					<td>@rou.fresh_steam_temp</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<div class="data-row table-summary">
	<div class="data-item rows-count">
		<h5>Всего записей:</h5>
		<p><span class="mark-color" id="all_cnt_rows"></span></p>
	</div>
</div>
<script type="text/javascript" src="@Url.Content("~/hss/js/datatables_common_scripts.js")"></script>		