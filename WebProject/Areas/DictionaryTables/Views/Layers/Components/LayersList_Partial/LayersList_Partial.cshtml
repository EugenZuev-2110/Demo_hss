@model List<WebProject.Areas.DictionaryTables.Models.LayerViewModel>
@{
	int cnt_columns = 10;
}

<div class="table-block">
	<input type="hidden" value="0" id="refresh_Layers_table" />
	<div class="table-buttons LayersTable-buttons"></div>
	<table id="LayersTable" class="display compact table-clicked" style="width:100%">
		<thead>
			<tr>
				<th>Уникальный номер слоя в эектронной модели</th>
				<th>Статус слоя</th>
				<th>Тип слоя</th>
				<th>Год создания слоя</th>
				<th>Расчетный год схемы</th>
				<th>Наименование файла слоя</th>
				<th>Путь хранения файла слоя</th>
				<th>Краткое описание слоя</th>
				<th>Год удаления слоя</th>
				<th>Причина удаления слоя</th>
			</tr>
			<tr class="filter-row ">
				@for (int i = 0; i < @cnt_columns; i++)
				{
					if (i == 0)
					{
						<th class="dtfc-fixed-left" style="left:0; position:sticky;"><input type="text" class="filter-col-0" /></th>
					}
					else
					{
						<th><input type="text" class="filter-col-@i" /></th>
					}
				}
			</tr>
		</thead>
		<tbody>
			@foreach (var laer in Model)
			{
				<tr onclick="OpenLayer(@laer.Id);">
					<td>@laer.layer_unom</td>
					<td>@laer.layer_status</td>
					<td>@laer.layer_type</td>
					<td>@laer.layer_data_status</td>
					<td>@laer.layer_perspective_year</td>
					<td>@laer.layer_filename</td>
					<td>@laer.layer_filepath</td>
					<td>@laer.layer_description</td>
					<td>@laer.layer_delete_year</td>
					<td>@laer.layer_delete_reason</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<div class="data-row table-summary">
	<div class="data-item rows-count">
		<h5>Всего записей:</h5>
		<p><span class="mark-color" id="all_cnt_rows"></span></p>
	</div>
</div>