@model List<WebProject.Areas.DictionaryTables.Models.PerspectiveDevelopment_MainListViewModel>
@{
    Layout = null;
    int cnt_columns = 3;
}

<h3>Перечень потребителей</h3>
<div class="table-block">
    <div class="table-buttons PerspectiveDevelopmentlistTable-buttons"></div>
    <input type="hidden" value="0" id="refresh_table" />
    <table id="PerspectiveDevelopmentlistTable" class="display compact table-clicked" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>УНОМ</th>
                <th>Тип</th>
            </tr>
            <tr class="filter-row ">
                @for (int i = 0; i < cnt_columns; i++)
                {
                    if (i == 0)
                    {
                        <th class="dtfc-fixed-left" style="left:0; position:sticky;"><input type="text" class="filter-col-0" /></th>
                    }
                    else
                    {
                        <th><input type="text" class="filter-col-@i" /></th>
                    }
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var tz_list in Model)
            {
                <tr ondblclick="OpenPopupPerspectiveDevelopment(@tz_list.dev_prog_id)">
                    <td>@tz_list.dev_prog_id</td>
                    <td>@tz_list.unom_num</td>
                    <td>@tz_list.type_prog_name</td>
                </tr>
            }
        </tbody>
    </table>
</div>

