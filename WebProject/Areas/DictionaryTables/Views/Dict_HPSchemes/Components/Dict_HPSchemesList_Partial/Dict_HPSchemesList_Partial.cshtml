@model List<WebProject.Areas.DictionaryTables.Models.HPSchemesListViewModel>

@{
	int cnt_columns = 19;
}

<div class="table-block">
	<input type="hidden" value="0" id="refresh_HPSchemes_table" />
	<div class="table-buttons Dict_HPSchemesTable-buttons"></div>
	<table id="Dict_HPSchemesTable" class="display compact table-clicked" style="width:100%">
		<thead>
			<tr>
				<th>Уникальный номер схемы теплового пункта</th>
				<th>Схема присоединения нагрузки отопления</th>
				<th>Схема присоединения нагрузки вентеляции</th>
				<th>Схема присоединения нагрузки горячего водоснабжения</th>
				<th>Наличие регулятора температуры отопления / вентиляции</th>
				<th>Наличие регулятора температуры горячего водоснабжения</th>
				<th>Наличие трехходового регулятора температуры горячего водоснабжения</th>
				<th>Наличие блока смешения горячего водоснабжения</th>
				<th>Наличие подпиточного насоса системы отопления / вентиляции</th>
				<th>Наличие циркуляционного насоса системы отопления / вентиляции (обратная линия)</th>
				<th>Наличие циркуляционного насоса системы отопления / вентиляции (подающая линия)</th>
				<th>Наличие циркуляционного насоса системы горячего водоснабжения</th>
				<th>Наличие элеватора системы отопления / вентиляции</th>
				<th>Наличие насоса смешения системы отопления / вентиляции</th>
				<th>Наличие перемычки между подающей и обратной линиями системы отопления / вентиляции</th>
				<th>Наличие шайбы на подающей линии системы отопления / вентиляции</th>
				<th>Наличие шайбы на обратной линии системы отопления / вентиляции</th>
				<th>Наличие шайбы системы горячего водоснабжения</th>
				<th>Файл со схемой теплового пункта</th>
			</tr>
			<tr class="filter-row ">
				@for (int i = 0; i < @cnt_columns; i++)
				{
					if (i == 0)
					{
						<th class="dtfc-fixed-left" style="left:0; position:sticky;"><input type="text" class="filter-col-0" /></th>
					}
					else
					{
						<th><input type="text" class="filter-col-@i" /></th>
					}
				}
			</tr>
		</thead>
		<tbody>
			@foreach(var schem in Model)
			{
				<tr onclick="OpenHPSchemes(@schem.scheme_id);">
				<td>@schem.scheme_id</td>
				<td>@schem.heat_connect_name</td>
				<td>@schem.vent_connect_name</td>
				<td>@schem.hw_connect_name</td>
				<td>@schem.avail_reg_temp_heat_vent</td>
				<td>@schem.avail_reg_temp_hw</td>
				<td>@schem.avail_threeway_reg_temp_hw</td>
				<td>@schem.avail_mix_block_hw</td>
				<td>@schem.avail_makeup_pump_heat_vent</td>
				<td>@schem.avail_circul_pump_reverse_heat_vent</td>
				<td>@schem.avail_circul_pump_feed_heat_vent</td>
				<td>@schem.avail_circul_pump_hw</td>
				<td>@schem.avail_elevator_heat_vent</td>
				<td>@schem.avail_mix_pump_heat_vent</td>
				<td>@schem.avail_jumper_reverse_feed_heat_vent</td>
				<td>@schem.avail_washer_feed_heat_vent</td>
				<td>@schem.avail_washer_reverse_heat_vent</td>
				<td>@schem.avail_washer_feed_hw</td>
				<td>@schem.scheme_file_url</td>
			</tr>
			}
		</tbody>
	</table>
</div>
<div class="data-row table-summary">
	<div class="data-item rows-count">
		<h5>Всего записей:</h5>
		<p><span class="mark-color" id="all_cnt_rows"></span></p>
	</div>
</div>