@model List<DataBase.Models.DictionaryTables.DataBaseDictionaryTablesModel.Dict_Diameters_Consumptions>
@{
	int cnt_columns = 5;
}

<div class="table-block">
	<input type="hidden" value="0" id="refresh_diameter_table"/>
			<div class="table-buttons DiametersConsumptionsTable-buttons"></div>
			<table id="DiametersConsumptionsTable" class="display compact table-clicked" style="width:100%">
				<thead>
					<tr>
						<th rowspan="2">УНОМ условного диаметра</th>
						<th rowspan="2">Условный диаметр (Д<sub>у</sub>), мм</th>
						<th colspan="2">Диаметр трубопровода</th>
						<th rowspan="2">Номинальная пропускная способность при удельной потере на трение 5 кгс/м<sup>2</sup> · м</th>
					</tr>
					<tr>
						<th>Внутренний, мм</th>
						<th>Внешний, мм</th>
					</tr>
			<tr class="filter-row ">
				@for (int i = 0; i < @cnt_columns; i++)
				{
					if (i == 0)
					{
						<th class="dtfc-fixed-left" style="left:0; position:sticky;"><input type="text" class="filter-col-0" /></th>
					}
					else
					{
						<th><input type="text" class="filter-col-@i" /></th>
					}
				}
			</tr>
				</thead>
				<tbody>
					@foreach(var diam in Model)
					{
				<tr ondblclick="OpenDiametersConsumptions(@diam.Id);">
						<td>@diam.Id</td>
						<td>@diam.cond_ht_net_diam</td>
						<td>@diam.ht_net_in_diam</td>
						<td>@diam.ht_net_out_diam</td>
						<td>@diam.consumption</td>

					</tr>
					}
				</tbody>
			</table>
		</div>
		<div class="data-row table-summary">
			<div class="data-item rows-count">
				<h5>Всего записей:</h5>
				<p><span class="mark-color" id="all_cnt_rows"></span></p>
			</div>
		</div>