@model List<WebProject.Areas.HeatPointsAndConsumers.Models.ContractConsumerListViewModel>
@{
	string btn_disable = string.Empty;
}
@if (ViewBag.contract == "0")
{
	btn_disable = "disabled";
}
<div class="data-item data-item-right flex-wrap flex-xl-nowrap">
	<button type="button" class="bttn bttn-color  mb-1 mb-xl-0 " @btn_disable style=" margin-left: auto; margin-right: 0.2px;">Добавить</button>
</div>
<div class="table-buttons ConsumersTable-buttons"></div>
<table id="ConsumersTable" class="display compact" style="width:100%">
	<thead>
		<tr>
			<th rowspan="2">УНОМ ПП</th>
			<th rowspan="2">Адрес</th>
			<th colspan="7">Тепловая нагрузка в горячей воде</th>
			<th colspan="7">Тепловая нагрузка в паре</th>
		</tr>
		<tr>
			<th>Отопление</th>
			<th>Вентиляцию</th>
			<th>ГВС</th>
			<th>Технология</th>
			<th>Прочие</th>
			<th>Кондиционирование</th>
			<th>Тепловые завесы</th>
			<th>Отопление</th>
			<th>Вентиляцию</th>
			<th>ГВС</th>
			<th>Технология</th>
			<th>Прочие</th>
			<th>Кондиционирование</th>
			<th>Тепловые завесы</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var cons in Model)
		{
			<tr>
				<td>@cons.unom_pp</td>
				<td>@cons.address</td>
				<td>@cons.ctr_hl_heat_hw</td>
				<td>@cons.ctr_hl_vent_hw</td>
				<td>@cons.ctr_hl_gvss_hw</td>
				<td>@cons.ctr_hl_tech_hw</td>
				<td>@cons.ctr_hl_other_hw</td>
				<td>@cons.ctr_hl_cond_hw</td>
				<td>@cons.ctr_hl_curtains_hw</td>
				<td>@cons.ctr_hl_heat_steam</td>
				<td>@cons.ctr_hl_vent_steam</td>
				<td>@cons.ctr_hl_gvss_steam</td>
				<td>@cons.ctr_hl_tech_steam</td>
				<td>@cons.ctr_hl_other_steam</td>
				<td>@cons.ctr_hl_cond_steam</td>
				<td>@cons.ctr_hl_curtains_steam</td>
			</tr>
		}
	</tbody>
</table>
<div class="data-row table-summary">
	<div class="data-item rows-count">
		<h5>Всего записей:</h5>
		<p><span class="mark-color" id="all_cnt_rows_popup"></span></p>
	</div>
	<div class="data-table-block">
		<h5>Тепловая нагрузка в горячей воде:</h5>
	</div>
	<div class="data-table-block">
		<p class="data-item">Отопление: <span class="mark-color" id="ctr_hl_heat_hw"></span><span class="data-unit"> Гкал/ч</span></p>
		<p class="data-item">Вентиляция: <span class="mark-color" id="ctr_hl_vent_hw"></span><span class="data-unit">  Гкал/ч</span></p>
		<p class="data-item">ГВС: <span class="mark-color" id="ctr_hl_gvss_hw"></span><span class="data-unit">  Гкал/ч</span></p>
		<p class="data-item">Технология: <span class="mark-color" id="ctr_hl_tech_hw"></span><span class="data-unit">  Гкал/ч</span></p>
	</div>
	<div class="data-table-block">
		<p class="data-item">Прочие: <span class="mark-color" id="ctr_hl_other_hw"></span><span class="data-unit"> Гкал/ч</span></p>
		<p class="data-item">Кондиционирование: <span class="mark-color" id="ctr_hl_cond_hw"></span><span class="data-unit">  Гкал/ч</span></p>
		<p class="data-item">Тепловые завесы: <span class="mark-color" id="ctr_hl_curtains_hw"></span><span class="data-unit">  Гкал/ч</span></p>
	</div>
	<div class="data-table-block">
		<h5> в паре:</h5>
	</div>
	<div class="data-table-block">
		<p class="data-item">Отопление: <span class="mark-color" id="ctr_hl_heat_steam"></span><span class="data-unit"> Т/ч</span></p>
		<p class="data-item">Вентиляция: <span class="mark-color" id="ctr_hl_vent_steam"></span><span class="data-unit">  Т/ч</span></p>
		<p class="data-item">ГВС: <span class="mark-color" id="ctr_hl_gvss_steam"></span><span class="data-unit">  Т/ч</span></p>
		<p class="data-item">Технология: <span class="mark-color" id="ctr_hl_tech_steam"></span><span class="data-unit">  Т/ч</span></p>
	</div>
	<div class="data-table-block">
		<p class="data-item">Прочие: <span class="mark-color" id="ctr_hl_other_steam"></span><span class="data-unit"> Т/ч</span></p>
		<p class="data-item">Кондиционирование: <span class="mark-color" id="ctr_hl_cond_steam"></span><span class="data-unit">  Т/ч</span></p>
		<p class="data-item">Тепловые завесы: <span class="mark-color" id="ctr_hl_curtains_steam"></span><span class="data-unit">  Т/ч</span></p>
	</div>
</div>