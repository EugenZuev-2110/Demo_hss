@model List<WebProject.Areas.HeatPointsAndConsumers.Models.ContractListViewModel>
@{
	int cnt_columns = 8;
}

<div class="table-block">
	<input type="hidden" value="0" id="refresh_Contract_table" />
	<div class="table-buttons ContractTable-buttons"></div>
	<table id="ContractTable" class="display compact table-clicked" style="width:100%">
		<thead>
			<tr>
				<th>УНОМ Договора</th>
				<th>Номер договора</th>
				<th>Дата договора теплоснабжения</th>
				<th>Дата действия договора на теплоснабжение</th>
				<th>ТСО</th>
				<th>Наименование организации контрагент по договору</th>
				<th>ИНН организации контрагент по договору</th>
				<th>Статус</th>
			</tr>
			<tr class="filter-row ">
				@for (int i = 0; i < @cnt_columns; i++)
				{
					if (i == 0)
					{
						<th class="dtfc-fixed-left" style="left:0; position:sticky;"><input type="text" class="filter-col-0" /></th>
					}
					else
					{
						<th><input type="text" class="filter-col-@i" /></th>
					}
				}
			</tr>
		</thead>
		<tbody>
			@foreach(var contr in Model)
			{
				<tr onclick="OpenPopupContract(@contr.contract_id)">
				<td>@contr.contract_num (@contr.short_name)</td>
				<td>@contr.contract_num</td>
				<td>@contr.contract_date?.ToString("d")</td>
				<td>@contr.contract_valid_date?.ToString("d")</td>
				<td>@contr.short_name</td>
				<td>@contr.org_name</td>
				<td>@contr.org_inn</td>
				<td>@contr.contract_status_name</td>
			</tr>
			}
		</tbody>
	</table>
</div>
<div class="data-row table-summary">
	<div class="data-item rows-count">
		<h5>Всего записей:</h5>
		<p><span class="mark-color" id="all_cnt_rows"></span></p>
	</div>
</div>
