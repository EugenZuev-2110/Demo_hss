    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-select.css" />
    
    <partial name="_ValidationScriptsPartial" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li id="unoms"><a asp-controller="Home" asp-action="Index" asp-area="">Главная</a></li>
                    <li id="items"><a asp-controller="Home" asp-action="Items" asp-area="">ПУНКТЫ</a></li>
                    <li id="reports"><a asp-controller="UnomReports" asp-action="Reports" asp-area="">ОТЧЁТЫ</a></li>
                    <li id="events"><a asp-controller="Home" asp-action="Events" asp-area="Events">Мероприятия</a></li>
                    <li id="ret"><a asp-controller="Home" asp-action="MainRET" asp-area="RET">РЭТ</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#!" id="user-name"></a>
                    </li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @RenderSection("modalsection", required: false)
    @RenderSection("scripts", required: false)
    @RenderSection("pageJs", required: false)

    

    <script type="text/javascript">

        $.ajax({
            type: 'POST',
            url: '@Html.Raw(Url.Action("UserName", "Home"))',
            dataType: 'json'
        }).done(function (result) {
            $("#user-name").html(result.userName);
        });

            //$("#user-name").html("Виктор");
    </script>

</body>
</html>
